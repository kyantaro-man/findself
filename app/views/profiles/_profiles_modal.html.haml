.modal.js-modal#modal01
  .modal__bg.js-modal-close
  .modal__container
    %h3.modal__container-title カバー写真
    .modal__container-contents
      .modal__container-contents__cover-image{style: "background-image: url(#{@profile.cover_image.url})"}
      = form_with model: @profile, url: {controller: 'profiles', action: 'show' }, html: {class: "modal__container-contents__form"}, local: true do |f|
        .modal__container-contents__form--top
          = f.label :cover_image, "ファイルを選択", class: "modal__container-contents__form--cover-image__label"
          = f.file_field :cover_image, class: "modal__container-contents__form--cover-image"
        .modal__container-contents-actions
          = link_to "閉じる", "", class: "js-modal-close"
          = f.submit "更新する", class: "modal__container-contents-actions__submit"
